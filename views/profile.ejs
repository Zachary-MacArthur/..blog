<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p>user: <span class="uhover"><%= user.userName %></span></p>
              <p>registration: <span class="uhover"><%= user.email %></span></p>
              <a href="/logout" class="btn1">logout</a>
          </div>
          <div class="mt-5">
            <p class="posta">submit post</p>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="">title <span class="uhover">(not required)</span></label>
                  <textarea type="text" class="texta" id="" name="title"></textarea>
              </div>
              <div class="mb-3">
                <label for="caption" class="">caption <span class="uhover">(not required)</span></label>
                <textarea class="texta" id="" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="">image</label>
                <input type="file" class="btn3" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn1" value="Upload">submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center">
          <span><a class="btn4" href="/feed">go to feed</a></span>
        </div>   
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>